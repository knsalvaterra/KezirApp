<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="#E6121212"
    app:strokeColor="#33FFFFFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/statusHeaderBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#4CAF50"
            android:gravity="center">

            <TextView
                android:id="@+id/statusHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFICADO"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/detailMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="texto 2 teste"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/detailBuyerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Kenedy Salvaterra"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/ticketInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/detailTicketType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NORMAL"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
             />

                <TextView
                    android:id="@+id/detailQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantidade: 2"
                    android:textColor="#B3FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeDetailButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="CONTINUAR"
                android:textColor="#FFFFFF"
                app:backgroundTint="#4DFFFFFF"
                app:cornerRadius="16dp"
                app:strokeColor="#66FFFFFF"
                app:strokeWidth="1dp"
                />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>