<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--top drag handle-->
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--  status header (icon + text)-->
    <LinearLayout
        android:id="@+id/sheetHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_success"
            app:tint="#39966B" />

        <TextView
            android:id="@+id/sheetStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="VERIFICADO"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!--main area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp">

        <!-- client info -->
        <TextView
            android:id="@+id/buyerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portador do Bilhete"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?android:attr/textColorSecondary"
            android:textAllCaps="true"

       />

        <TextView
            android:id="@+id/sheetBuyerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kenedy Salvaterra"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textStyle="bold" />

        <!--diuvider-->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="20dp"
            android:background="?attr/colorOutlineVariant" />

        <!-- ticket details -->
        <LinearLayout
            android:id="@+id/ticketDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- ticket list section -->
        <TextView
            android:id="@+id/ticketsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Detalhes do Bilhete"
            android:textAllCaps="true"

            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- additional info todo -->
        <TextView
            android:id="@+id/sheetMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="italic" />

        <!-- button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sheetCloseButton"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="100dp"
            android:text="CONTINUAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:backgroundTint="#39966B"
            app:cornerRadius="16dp" />

    </LinearLayout>
</LinearLayout>