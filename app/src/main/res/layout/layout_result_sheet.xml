<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Top Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="#C0C0C0" />

    <!-- Status Header -->
    <LinearLayout
        android:id="@+id/sheetHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <TextView
            android:id="@+id/sheetStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFICADO"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portador do Bilhete"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sheetBuyerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kenedy Salvaterra"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="20dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/sheetTicketDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NORMAL â€¢ Qnt: 1"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Consistent Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sheetCloseButton"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:text="CONTINUAR"
            app:cornerRadius="16dp" />

    </LinearLayout>
</LinearLayout>