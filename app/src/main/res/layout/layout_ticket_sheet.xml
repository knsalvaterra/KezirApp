<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Top drag handle -->
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Status header (icon + text) -->
    <LinearLayout
        android:id="@+id/sheetHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_success"
            app:tint="#39966B" />

        <TextView
            android:id="@+id/sheetStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="VERIFICADO"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ScrollView for flexible content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Client info -->
            <TextView
                android:id="@+id/buyerNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PORTADOR DO BILHETE"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/sheetBuyerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Kenedy Salvaterra"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold" />

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="?attr/colorOutlineVariant" />

            <!-- Ticket list section label -->
            <TextView
                android:id="@+id/ticketsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="DETALHES DO BILHETE"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?android:attr/textColorSecondary" />

            <!-- Ticket details container (dynamically populated) -->
            <LinearLayout
                android:id="@+id/ticketDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Additional info message -->
            <TextView
                android:id="@+id/sheetMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="italic"
                android:visibility="gone" />

            <!-- Spacer to push button to bottom -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="32dp" />

            <!-- Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sheetCloseButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="CONTINUAR"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:backgroundTint="@color/button_tint_selector"
                app:cornerRadius="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>