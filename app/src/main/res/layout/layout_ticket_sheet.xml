<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:background="@drawable/bottom_sheet_background">



    <!-- Status header with gradient background -->
    <LinearLayout
        android:id="@+id/sheetHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Status icon with circular background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusIconCard"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/green_600" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Status text -->
        <TextView
            android:id="@+id/sheetStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="BILHETE VÁLIDO"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            tools:text="BILHETE VÁLIDO" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/sheetStatusSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Verificado com sucesso"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            tools:text="Verificado com sucesso" />

    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Ticket holder info card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Label with icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/buyerLabelIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/green_600" />

                        <TextView
                            android:id="@+id/buyerNameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="PORTADOR DO BILHETE"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/green_600"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            android:letterSpacing="0.1" />

                    </LinearLayout>

                    <!-- Name -->
                    <TextView
                        android:id="@+id/sheetBuyerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Kenedy Salvaterra"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Kenedy Salvaterra" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Ticket details section -->
            <TextView
                android:id="@+id/ticketsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:text="DETALHES DO BILHETE"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <!-- Ticket details card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:id="@+id/ticketDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!--  ticket details -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Info message -->
            <LinearLayout
                android:id="@+id/infoMessageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/info_message_background_valid"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/infoIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/green_700" />

                <TextView
                    android:id="@+id/sheetMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:text="Este bilhete já foi verificado anteriormente"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Este bilhete já foi verificado anteriormente" />

            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="24dp" />

            <!-- Action button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sheetCloseButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="CONTINUAR"
                android:textColor="#FFFFFF"
                android:textSize="16sp"

                app:backgroundTint="@color/green_600"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconPadding="8dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>