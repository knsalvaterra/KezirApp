<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:paddingTop="24dp">

    <!-- Status header with gradient background -->
    <LinearLayout
        android:id="@+id/sheetHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Status icon with circular background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusIconCard"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/green_600" />

        </com.google.android.material.card.MaterialCardView>

        <!-- status text -->
        <TextView
            android:id="@+id/sheetStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.05"
            android:text="BILHETE VÁLIDO"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold"
            tools:text="BILHETE VÁLIDO" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/sheetStatusSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.9"
            android:text="Verificado com sucesso"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Verificado com sucesso" />

    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Ticket holder info card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Name Label with icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/buyerLabelIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_person"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/buyerNameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:letterSpacing="0.1"
                            android:text="@string/buyer_name_label"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textAllCaps="true" />

                    </LinearLayout>

                    <!-- Name -->
                    <TextView
                        android:id="@+id/sheetBuyerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        tools:text="Kenedy Salvaterra" />

                    <!-- phone label-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/buyerPhoneIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_phone"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/buyerPhoneLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:letterSpacing="0.1"
                            android:text="@string/buyer_phone_label"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textAllCaps="true" />

                    </LinearLayout>

                    <!-- Phone -->
                    <TextView
                        android:id="@+id/sheetBuyerPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        tools:text="+*** *** ****" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ticket details section -->
            <TextView
                android:id="@+id/ticketsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.1"
                android:text="DETALHES DO BILHETE"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <!-- ticket details card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/ticketDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- info message -->
            <LinearLayout
                android:id="@+id/infoMessageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/info_message_background_valid"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/infoIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/green_700" />

                <TextView
                    android:id="@+id/sheetMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Este bilhete já foi verificado anteriormente"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Este bilhete já foi verificado anteriormente" />

            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="24dp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sheetCloseButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="24dp"
        android:text="CONTINUAR"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        android:textSize="16sp"
        app:backgroundTint="@color/button_tint_selector"
        app:cornerRadius="16dp" />
</LinearLayout>